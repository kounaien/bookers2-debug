<div class="row">

	<div class="col-xs-3">
	</div>

	<div class="col-xs-9">
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="4"></th>
				</tr>
			</thead>

			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td>
							<%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						</td>
						<td><%= user.name %></td>
						<td><%= "フォロー数 #{user.follower.count}" %></td>
						<td><%= "フォロワー数 #{user.followed.count}" %></td>
						<td>
							<% if current_user.following?(user) %>
								<%= link_to 'フォローを外す', unfollow_path(user.id), method: :post %>
							<% else %>
								<%= link_to 'フォローをする', follow_path(user.id), method: :post %>
							<% end %>
						</td>
						<td><%= link_to 'show', user_path(user) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>